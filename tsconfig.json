{
  "compilerOptions": {
    "module": "es2020",
    "target": "es5",
    "outDir": "bin",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "jasmine"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "debug": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
  }
}
